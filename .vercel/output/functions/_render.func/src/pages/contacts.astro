---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Контакти',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero>
    <Fragment slot="title">
      <span class="text-accent dark:text-white">Контакти</span>
    </Fragment>

    <Fragment slot="subtitle">
      Будемо раді відповісти на ваші запитання та бачити вас у нашому храмі
    </Fragment>
  </Hero>

  <!-- Контактна інформація *************** -->
  <Features2
    title="Як з нами зв'язатися"
    items={[
      {
        title: 'Адреса',
        description: 'м. Київ, Поділ<br />(точна адреса буде додана)',
        icon: 'tabler:map-pin',
      },
      {
        title: 'Телефон',
        description: '+380 (XX) XXX-XX-XX<br />(буде додано)',
        icon: 'tabler:phone',
      },
      {
        title: 'Email',
        description: 'temple@three-hierarchs.church<br />(буде додано)',
        icon: 'tabler:mail',
      },
      {
        title: 'Графік роботи',
        description: 'Щодня під час богослужінь<br />Церковна лавка: 8:00 - 18:00',
        icon: 'tabler:clock',
      },
    ]}
  />

  <!-- Форма контактів *************** -->
  <ContactUs
    id="form"
    title="Напишіть нам"
    subtitle="Заповніть форму, і ми відповімо вам найближчим часом"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: "Ім'я",
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Повідомлення',
      name: 'message',
    }}
    disclaimer={{
      label: 'Надсилаючи форму, ви погоджуєтеся з нашою політикою конфіденційності.',
    }}
    description="Ми відповідаємо протягом 1-2 робочих днів."
  />

  <!-- Карта *************** -->
  <div class="mx-auto max-w-7xl px-4 sm:px-6 py-12 md:py-16">
    <div class="rounded-lg overflow-hidden shadow-lg">
      <div class="bg-slate-100 dark:bg-slate-800 h-96 flex items-center justify-center">
        <p class="text-slate-600 dark:text-slate-400">
          Карта буде додана після налаштування Google Maps
        </p>
      </div>
    </div>
  </div>

  <!-- Як дістатися *************** -->
  <div class="mx-auto max-w-3xl px-4 sm:px-6 pb-12 md:pb-16">
    <div class="bg-blue-50 dark:bg-slate-800 rounded-lg p-6 md:p-8">
      <h3 class="text-2xl font-bold mb-4">Як дістатися</h3>
      <ul class="space-y-3">
        <li class="flex items-start">
          <span class="text-accent mr-2">•</span>
          <span><strong>Метро:</strong> станція Контрактова площа</span>
        </li>
        <li class="flex items-start">
          <span class="text-accent mr-2">•</span>
          <span><strong>Автобус:</strong> маршрути будуть додані</span>
        </li>
        <li class="flex items-start">
          <span class="text-accent mr-2">•</span>
          <span><strong>Трамвай:</strong> маршрути будуть додані</span>
        </li>
        <li class="flex items-start">
          <span class="text-accent mr-2">•</span>
          <span><strong>Парковка:</strong> інформація буде додана</span>
        </li>
      </ul>
    </div>
  </div>
</Layout>
